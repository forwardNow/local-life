.shop-item {
  display: flex;
  padding: 29rpx 30rpx;
  border-bottom: solid 2rpx #e5e5e5;
}

.thumb-box {
  flex: 0 0 auto;
  width: 160rpx;
  height: 160rpx;
}

.thumb {
  display: block;
  width: 100%;
  height: 100%;
}

.info {
  flex: 0 0 auto;
  margin-left: 18rpx;
  width: 512rpx;
  line-height: 1;
  color: #666;
  font-size: 24rpx;
}

.shop-name {
  margin-top: 18rpx;
  color: #333;
  font-size: 36rpx;

  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.location {
  display: flex;
  justify-content: space-between;
  margin-top: 18rpx;
}
